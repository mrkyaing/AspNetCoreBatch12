<head>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<table>
    <thead>
        This is making an order via ajax called with Jquery
    </thead>
    <tr>
        <td>
            Order Id:
        </td>
        <td><input id="txtOrderId" class="from-control"/> </td>
    </tr>
    <tr>
        <td>
            Qty:
        </td>
        <td><input id="txtQty" class="from-control"  type="number"/> </td>
    </tr>
    <tr>
        <td>
           Unit Price:
        </td>
        <td><input id="txtUnitPrice" class="from-control" type="number"/> </td>
    </tr>
    <tr>
        <td>
           <button class="btn btn-primary" id="btnMakeOrder">Make an Order</button>
        </td>
        <td><button class="btn btn-danger">Cancel </button></td>
    </tr>
</table>
<script>
    $("#btnMakeOrder").on("click", function () {
        var url = "/simple/makeanorder";
        var order = {};//make a json object 
        order.OrderId = $("#txtOrderId").val();//get the user's input value of order id 
        order.Quantity = $("#txtQty").val();
        order.UnitPrice = $("#txtUnitPrice").val();
        $.ajax({
            type:'POST',
            url:url,
            data:order,
            success:function(response){
                var data = JSON.stringify(response);
                alert("Your total order cost is "+data);//3600
            },
            failure: function (error) {
                console.log(error);
            }
        });
    })
</script>
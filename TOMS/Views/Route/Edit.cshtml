@model RouteViewModel
@{
    ViewData["Title"] = "Route Edit";
}
<body>
    @if (TempData["info"] != null)
    {
        <div class="alert alert-success">
            @TempData["info"]
        </div>
    }
    <h3>Edit Routes</h3>
    <form action="/route/update" method="post">
        <input type="hidden" name="Id" value="@Model.Id"/>
        <div class="mb-3">
            <label class="form-label">From City </label>
            <select name="FromCityId" class="form-control">   
                <option value="@Model.FromCityId">@Model.FormCityName</option>
                @foreach (var city in ViewBag.FromCityIds)
                {
                    <option value="@city.Id">@city.Name</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">To City </label>
            <select name="ToCityId" class="form-control">
                <option value="@Model.ToCityId">@Model.ToCityName</option>
                @foreach (var city in ViewBag.ToCityIds)
                {
                    <option value="@city.Id">@city.Name</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Time (HH:MM:SS)</label>
            <input type="time" class="form-control" name="When" placeholder="enter time in this format :hh:mm:ss" value="@Model.When">
        </div>

        <div class="mb-3">
            <label class="form-label">Unit Price</label>
            <input type="text" class="form-control" name="UnitPrice" value="@Model.UnitPrice">
        </div>

        <div class="mb-3">
            <label class="form-label">Bus Line </label>
            <select name="BusLineId" class="form-control">
                <option value="@Model.BusLineId">@Model.Owner</option>
                @foreach (var busLine in ViewBag.BusLineIds)
                {
                    <option value="@busLine.Id">@busLine.Owner</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Remarks</label>
            <input type="text" class="form-control" name="Remark" value="@Model.Remark">
        </div>
        <input type="submit" class="btn btn-primary" value="Update" />
        <input type="reset" class="btn btn-primary" value="Cancel" />
    </form>
</body>

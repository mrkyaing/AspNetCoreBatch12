@model List<SearchRouteResultViewModel>
<h1>Search Routes  Result List Information</h1>
@if (TempData["info"] != null)
{
    <div class="alert alert-info">@TempData["info"]</div>
}
<table class="table table-striped-columns" id="tableRoute">
    <thead>
        <tr>
            <th scope="col">Sr.No</th>
            <th scope="col">Bus Line Type</th>
            <th scope="col">Number Of Seats</th>
            <th scope="col">Bus Line Name</th>
            <th scope="col">Form City</th>
            <th scope="col">To City </th>
            <th scope="col">Unit Price</th>
            <th scope="col">When </th>
            <th scope="col">Remark</th>
           <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@index</td>
                <td>@item.Type</td>
                <td>@item.NumberOfSeat</td>
                <td>@item.Owner</td>
                <td>@item.FormCityName</td>
                <td>@item.ToCityName</td>
                <td>@item.UnitPrice</td>
                <td>@item.When</td>
                <td>@item.Remark</td>
                    <td>
                    <a class="btn btn-success" href="/TicketOrder/SelectRouteByPassenger?routeId=@item.RouteId"><i class="fa-solid fa-pen-to-square"></i></a>
                </td>
            </tr>
            index++;
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#tableRoute").DataTable();
    });
</script>
